<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Базовый стиль для всех кнопок -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Foreground" Value="Black" />
    </Style>

    <!-- Стиль для кнопки меню-->
    <Style x:Key="ButtonMenuStyle" TargetType="Button"
           BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Background" Value="LightBlue" />
    </Style>

    <!-- Стиль для другой кнопки -->
    <Style x:Key="ButtonStyle1" TargetType="Button" 
           BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Background" Value="BurlyWood" />
    </Style>

    

    <!-- Базовый стиль для всех Label -->
    <Style x:Key="BaseLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Стиль для заголовка -->
    <Style x:Key="LabelMenuStyle" TargetType="Label"
           BasedOn="{StaticResource BaseLabelStyle}">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <!-- Стиль для другого Label -->
    <Style x:Key="Heading" TargetType="Label" 
           BasedOn="{StaticResource BaseLabelStyle}">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <!-- Стиль для выравнивания по центру -->
    <Style x:Key="CenteredAlignmentStyle" TargetType="FrameworkElement">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Общий базовый стиль для TextBox и PasswordBox -->
    <Style x:Key="BaseInputStyle" TargetType="Control">
        <Setter Property="Margin" Value="0 5 0 5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderBrush" Value="#ccc"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Стиль для TextBox -->
    <Style x:Key="TextBoxMenu" TargetType="TextBox" BasedOn="{StaticResource BaseInputStyle}" />


    <!-- Стиль для PasswordBox -->
    <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox" BasedOn="{StaticResource BaseInputStyle}" />

    <!-- Общий стиль для TextBox -->
    <Style x:Key="InputTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource BaseInputStyle}"/>
   

    <!-- Общий стиль для Label -->
    <Style x:Key="InputLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0 5 0 5"/>
    </Style>

    <!-- Общий стиль для кнопок -->
    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Background" Value="BurlyWood"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#4472c4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <!--<Setter Property="Cursor" Value="Hand"/>-->
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
