<UserControl x:Class="Library.Client.GUI.View.User.UserPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:userVm="clr-namespace:Library.Client.GUI.ViewModels.UserVM"
             Height="600"
             Width="1100">

    <UserControl.DataContext>
        <userVm:UserPageViewModel/>
    </UserControl.DataContext>


    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Мои книги"
                        Command="{Binding LoadActivityBooksUserCommand}"
                        Style="{StaticResource ButtonMenuStyle}"/>

                <Button Content="Личный кабинет"
                        Style="{StaticResource ButtonMenuStyle}"/>

                <Button Content="Настройки"
                        Style="{StaticResource ButtonMenuStyle}"/>
            </StackPanel>
        </DockPanel>


        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">

                <Label Content="Меню" 
                       Style="{StaticResource LabelMenuStyle}"/>

                <Button Content="Взять книгу" 
                        Command="{Binding LoadActualBooksCommand}"
                        Style="{StaticResource ButtonMenuStyle}"/>

                <Button Content="Вернуть книгу" 
                        Style="{StaticResource ButtonMenuStyle}"/>

                <Button Content="Посмотреть историю" 
                        Style="{StaticResource ButtonMenuStyle}"/>

                <Button Content="Вернуться в главное меню" 
                        Command="{Binding BackCommand}"
                        Style="{StaticResource ButtonMenuStyle}"/>

                <Button Content="Выход" 
                        Command="{Binding ExitCommand }"
                        Style="{StaticResource ButtonMenuStyle}"/>

            </StackPanel>

            <Grid Grid.Column="1" Margin="10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Content="{Binding NameCurrentCollection}"
                       Style="{StaticResource LabelMenuStyle}"
                       Grid.Row="0"/>

                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding CurrentSelectedCollections}" 
                          AutoGenerateColumns="False"
                          Margin="10"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          IsReadOnly="True"
                          Loaded="DataGrid_Loaded"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
