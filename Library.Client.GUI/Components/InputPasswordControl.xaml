<UserControl x:Class="Library.Client.GUI.Components.InputPasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:Library.Client.GUI.Components"
             x:Name="Input">

    <Grid DataContext="{Binding ElementName=Input}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Label Content="{Binding Label, Mode=OneWay}"
               Grid.Column="0"
               Style="{StaticResource InputLabelStyle}"/>

        <PasswordBox components:PasswordBoxAssistant.Password="{Binding InputPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     components:PasswordBoxAssistant.BindPassword="True"
                     Style="{StaticResource PasswordBoxStyle}"
                     Grid.Column="1"/>
    </Grid>
</UserControl>
