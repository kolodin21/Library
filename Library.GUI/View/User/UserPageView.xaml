<UserControl x:Class="Library.Client.GUI.View.User.UserPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:userVm="clr-namespace:Library.Client.GUI.ViewModels.UserVM"
             Height="350" 
             Width="400">

    <UserControl.DataContext>
        <userVm:UserPageViewModel/>
    </UserControl.DataContext>

    <StackPanel>
        <Label Content="{Binding UserName}"
               Height="100"/>
    </StackPanel>

</UserControl>
