<UserControl x:Class="Library.Client.GUI.View.LogInSystem.AuthorizationPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:logInSystemVm="clr-namespace:Library.Client.GUI.ViewModels.LogInSystemVM"
             xmlns:cmp="clr-namespace:Library.Client.GUI.Components"

             Height="350" 
             Width="400">

    <UserControl.DataContext>
        <logInSystemVm:AuthorizationPageViewModel/>
    </UserControl.DataContext>


    <Grid Background="AliceBlue">
    <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="2*"/>
        <RowDefinition Height="2*"/>
    </Grid.RowDefinitions>

        <StackPanel Margin="20">
        <Label Content="Авторизация"
               Style="{StaticResource LabelMenuStyle}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="20">
            <cmp:InputControl
                Label="Логин"
                InputText="{Binding Login}"/>

            <cmp:InputPasswordControl
                Label="Пароль"
                InputPassword="{Binding Password,Mode=TwoWay}"/>
       </StackPanel>
        
        <StackPanel Grid.Row="2">

            <Button Content="Войти" 
                    Command="{Binding EnterCommand}"
                    Style="{StaticResource ButtonMenuStyle}"/>

            <Button Content="Назад"
                    Command="{Binding BackCommand}"
                    Style="{StaticResource ButtonMenuStyle}"/>

        </StackPanel>

    </Grid>
</UserControl>
