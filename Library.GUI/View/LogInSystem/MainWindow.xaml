<Window x:Class="Library.GUI.View.LogInSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Library.GUI.ViewModels.LogInSystemVM"

        Title="Авторизация" 
        Height="350" 
        Width="400"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen">

        <Window.DataContext>
            <vm:MainWindowVM/>
        </Window.DataContext>


    <StackPanel Width="350" Height="300">

        <Label Content="Библиотека"  
               HorizontalAlignment="Center" 
               Height="40"
               Style="{StaticResource Heading}"/>

        <Label Content="Вход в систему" 
           Style="{StaticResource LabelMenuStyle}"/>

        <Button Content="Войти" 
                Command="{Binding OpenCommand}"
                Style="{StaticResource ButtonMenuStyle}"/>

        <Button Content="Зарегистрироваться" 
                Command="{Binding RegistrationCommand}"
                Style="{StaticResource ButtonMenuStyle}"/>

        <Button Content="Выход"
                Command="{Binding ExitCommand}"
                Style="{StaticResource ButtonMenuStyle}"/>
    </StackPanel>

</Window>
